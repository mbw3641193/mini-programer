.anno{
  overflow: hidden;
  box-sizing: border-box;
  padding: 10px 15px;
  border-bottom: 10px solid #f5f5f5;
}
.anno image{
  float: left;
  width: 20px;
  margin-right: 10px;
  margin-top: 5px;
}
.anno text{
  float: left;
  width: calc(100% - 100px);
  font-size: 14px;
  line-height: 25px;
  color: #3a72e1;
  overflow: hidden;    
  text-overflow: ellipsis; 
  white-space: nowrap; 
}
.anno button{
  float: right;
  height:25px;
  padding: 0;
  width: 50px;
  line-height: 25px;
  margin-left: 10px;
}

.index-title{
  padding: 6px 15px;
  overflow: hidden;
  border-bottom: 2px solid #3669f8;
}
.index-title text{
  font-size: 14px;
  color: #3669f8;
  font-weight: 600;
}
.index-title button{
  float: right;
  line-height: 25px;
  border: none 0;
  color: #3669f8;
  margin-right: -15px;
}
.discovery-success{
  padding: 10px 15px;
}
.discovery-image{
  position: relative;
  height: 140px;
  overflow: hidden;
}
.discovery-image image{
  width: 100%;
}
.discovery-image text{
  position: absolute;
  bottom: 0;
  width: 100%;
  display: block;
  font-size: 14px;
  box-sizing: border-box;
  padding: 0 15px;
  height: 40px;
  line-height: 40px;
  background-color: rgba(0,0,0,.5);
  color: #fff;

}
.discovery-list{
  padding:10px 0;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #eee;
}
.discovery-list image{
  display: block;
  width:60px;
  height: 60px;
}
.discovery-list text{
  flex: 1;
  font-size: 14px;
  padding-left: 10px;
  height: 40px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.discovery-newsList{
  padding:10px 0;
  border-bottom: 1px solid #eee;
}

.discovery-newsList text{
  font-size: 14px;
  padding-left: 10px;
  height: 40px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.discovery-newsList h6{
  display: block;
  width: 100%;
  text-align: right;
  font-size: 12px;
  color: #999;
  padding-top: 5px;
}