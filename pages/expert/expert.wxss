page {
  background-color: #f5f5f5;
} 
.expert-head{
  text-align: center;
  padding-top: 15px;
}
.expert-head button{
  border: none 0;
  border-radius: 0;
  background-color: #fff;
  line-height: 35px;
  padding: 0 40px;
  
}
.expert-head button:first-child{
  border-top-left-radius: 50px;
  border-bottom-left-radius: 50px;
}
.expert-head button:last-child{
  border-top-right-radius: 50px;
  border-bottom-right-radius: 50px;
}


.expert-head button.hightlight{
  background-color: #3a72e1;
  color: #fff;
}
.expert-body{
  display: none;
  padding: 10px 15px;
}
.expert-body.showFilter{
  display: block;
}
.expert-box{
  width: 100%;
  background-color: #fff;
  border-radius: 5px;
  min-height: 70px;
  margin-bottom: 10px;
  box-sizing: border-box;
  padding:10px 15px;
  box-shadow: 0px 0px 5px rgba(0,0,0,.1);
  position: relative;
  overflow: hidden;
}
.expert-box>h4{
  font-weight: bold;
  color: #3a72e1;
  font-size: 16px;
}
.expert-box>text{
  display: block;
  font-size: 14px;
  color: #666;
  margin-top: 5px;
}
.expert-box>image{
  width: 15px;
  position: absolute;
  right: 15px;
  top: 43px;
  transform:rotate(180deg);
}
.expert-box>image.rotate{
  transform:rotate(0deg);
}
.expert-box>view{
  margin: -15px;
  margin-top: 15px;
  border-top: 1px dashed #3a72e1;
  background-color: #eff7fb;
  box-sizing: border-box;
  padding: 10px 15px;
  padding-bottom: 0;
  overflow: hidden;
}
.expert-box>view h4{
  
  font-weight: bold;
  box-sizing: border-box;
  font-size: 14px;
  color: #3a72e1;
  border-bottom: 2px solid #3a72e1;
  
  line-height: 27px;
 
  
}
.expert-box>view div{
  
  box-sizing: border-box;
  padding-top: 3px;
  padding-left: 10px;
  
}
.expert-box>view div text{
  display: block;
  font-size: 14px;
  color: #666;
  line-height: 25px;
}
