<view class="filter">
  <h4>技术成熟度</h4>
  <view>
  <text bindtap="changeColor" data-id="{{index}}" data-name="{{item}}" wx:for="{{filterData}}" wx:key="index" style="background-color:{{pageBackgroundColor[index]}}; color:{{pageColor[index]}}">
          {{item}}
        </text>
        </view>

        <h4>技术成熟度</h4>
  <view>
